{
    "hosting":  {
                    "public":  "dist/kalad-ecommerce/browser",
                    "ignore":  [
                                   "firebase.json",
                                   "**/.*",
                                   "**/node_modules/**"
                               ],
                    "cleanUrls":  true,
                    "rewrites":  [
                                     {
                                         "destination":  "/index.html",
                                         "source":  "**"
                                     }
                                 ]
                },
    "functions":  {
                      "source":  "functions"
                  },
    "firestore":  {
                      "rules":  "firestore.rules",
                      "indexes":  "firestore.indexes.json"
                  }
}
